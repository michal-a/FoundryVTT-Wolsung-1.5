<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
            <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'wolsung.blizna.name' }}"/></h1>
            <div class="header-row">
                <span><b>{{localize "wolsung.blizna.bonus"}}</b>+3&nbsp;</span>
                <select name="data.bonus">
                    {{#select data.bonus}}
                    {{#each config.listaUmiejetnosci as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
                <span>&nbsp;&nbsp;<b>{{localize "wolsung.blizna.kara"}}</b>-3&nbsp;</span>
                <select name="data.kara">
                    {{#select data.kara}}
                    {{#each config.listaUmiejetnosci as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                    {{/each}}
                    {{/select}}
                </select>
            </div>
    </header>
    <section class="sheet-content">
        <span class="description">{{localize "wolsung.opisString"}}</span>
        {{editor content=data.opis target="data.opis" button=true owner=owner editable=editable content=""}}
    </section>
</form>
