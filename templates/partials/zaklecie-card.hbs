        <a class="item-edit removeble" data-itemid="{{id}}" title="{{localize 'wolsung.contextMenu.edit'}}">{{name}}</a>
    </div>
    <div class="magia-cechy">
        <p><b>{{localize "wolsung.zaklecie.wymagania"}}</b></p>
        <p>{{cleartext data.data.wymagania}}</p>
        <p><b>{{localize "wolsung.zaklecie.efekty"}}</b></p>
        <p>{{cleartext data.data.efekty}}</p>
    </div>
</div>