<div class="magia-card item" data-item-id="{{id}}">
    <div class="magia-name" data-field="name">
        <a class="item-click item-context removable printable" data-item-id="{{id}}" title="{{localize 'wolsung.contextMenu.edit'}}">{{name}}</a>
    </div>
    <div class="magia-cechy">
        <p><b>{{localize "wolsung.moc.efekt"}}</b></p>
        <p>{{cleartext data.data.efekt}}</p>
        <p><b>{{localize "wolsung.moc.karta"}}</b></p>
        <p>{{cleartext data.data.karta}}</p>
        <p><b>{{localize "wolsung.moc.bonus"}}</b></p>
        <p>{{cleartext data.data.bonus}}</p>
    </div>
</div>